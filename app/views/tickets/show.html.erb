<div class="ui container">
  <div class="ui grid">

    <div class="ten wide column">
      <div class="ui raised padded segment">

<!-- ticket header -->
        <div class="float-right">
          <small>
            Ticket created on: <%= standard_date_format(@ticket.created_at) %>
          </small>
          <br />
          <small>
            Department: <%= @ticket.department.name %>
          </small>
          <small>
            <h5><%= @ticket.user.full_name %> </h5>
</small>
          </div>
          <div class="float-left">
            <h3>
              <% if @ticket.flag? %>
              <%#= @ticket.flag %>
              <i class='red warning sign icon'></i>
              <% end %>
              TICKET ID #<%= @ticket.id %>
              <div class="ui teal label">Open</div></h3>
          </div>
        <div class="ui clearing divider"></div>


<!-- ticket title  -->
        <h1 class='ui teal block'>Subject: <%= @ticket.title %>
          <span class='float-right'>
          </span>
        </h1>
        <!-- <div class="ui raised very padded text container segment"> -->
  <!-- <div class="ui raised very padded text container segment"> -->
          <p><%= @ticket.body %></p>
        <!-- </div> -->


      </div>
      <div class="ui raised padded segment">

      <h1>Comments</h1>
        <%= render '/comments/form' %>
        <br>
        <hr />
    <br>
        <div id="comments">
          <% if @ticket.comments.present? %>
            <% @ticket.comments.each do |com| %>

            <%= render '/comments/comment', comment: com %>
            <% end %>
          <% end %>
        </div>

    <br>


    </div>


    </div>




  <!-- side column  -->
    <div class="six wide column">
      <div class="ui segment">
        <h4>Ticket Info</h4>

        <p>Client name: <span class='float-right'>
          <strong><%= @ticket.user.first_name %>
            <%= @ticket.user.last_name %></span>
          </strong>
        </p>
        <p>Email: <span class='float-right'>
          <strong>
            <%= @ticket.user.email %></span></p>
          </strong>

        <p>User tickets: <span class='float-right'>
          <strong>
            <%= @ticket.user.tickets.count %></span></p>

          </strong>


        <hr>
  <% if current_user.is_staff? %>
        <p>Support Type: <span class='float-right'>
          <strong>
            <%= @ticket.department.name %></span></p>
          </strong>
        <p>Priority: <span class='float-right'>
          <strong>Not Set</span></p></strong>
        <p>Assigned Staff: <span class='float-right'>


          <%# staff_array = @staff.all.map { |s| [s.full_name, s.id] } %>
          <%#= options_for_select(staff_array) do |s| %>
          <div class="menu">

          <div class="item"><%#= s.full_name %> </div>
<%# end %>


          <strong>Not Set</span></p></strong>
        <hr />

        <div class="ui selection dropdown">
          <input type="hidden" name="gender">
          <i class="dropdown icon"></i>
          <div class="default text">Assign Staff</div>
          <div class="menu">
            <div class="item" data-value="1">Bob Bobberson </div>
            <div class="item" data-value="0">Nicholas Cage</div>
            <div class="item" data-value="0">Donald Trunk</div>
            <div class="item" data-value="0">Bruce Lil Wayne</div>
          </div>
        </div>
        <button class="ui right labeled icon teal button">
          <i class="right arrow icon"></i>
          Update Ticket
        </button>
  <% end %>
      </div>


    </div>
  </div>

</div>
