<div class="ui fullcontainer">

  <div class="ui secondary pointing menu">
    <a class="item active">
      Current tickets
    </a>
    <a class="item">
      Closed Tickets
    </a>
    <div class="right menu">
      <a class="ui item">
        Another thing
      </a>
    </div>
  </div>

  <div class="ui segment">
    <%= link_to new_ticket_path(@ticket), class: "ui right floated small primary labeled icon button" do %>
      <i class="user right icon"></i> Create Ticket
    <% end %>
    <div class="ui float-right multiple dropdown">
      <input type="hidden" name="filters">
      <i class="filter icon"></i>
      <span class="text">Filter Posts</span>
      <div class="menu">
          <div class="ui icon search input">
            <i class="search icon"></i>
            <input type="text" name="search" placeholder="Search keyword...">
          </div>
          <div class="divider"></div>
          <div class="header">
            <i class="tags icon"></i>
            Tag Label
          </div>
          <div class="item">
            <div class="ui red empty circular label"></div>
            Urgent
          </div>
          <div class="item">
            <div class="ui yellow empty circular label"></div>
            Priority
          </div>
          <div class="item">
            <div class="ui green empty circular label"></div>
            Needs attention
          </div>
          <div class="item">
            <div class="ui black empty circular label"></div>
            Admin involved
          </div>
        </div>
      </div>

  <!-- order tickets by last updated. maybe put in updated by customer or staff flags on the table -->

    <h1 class="ui left floated   ">Tickets</h1>

  <!-- filter dropdown menu -->
    <hr>



    <table class="ui compact celled definition table">

  <!-- table head -->
      <thead class="full-width">
        <tr>
          <th>Check</th>
          <th>Flag</th>
          <th>Status</th>
          <th>Title</th>
          <th>Description</th>
          <th>Client</th>
          <th>Created</th>
          <th>Updated</th>
          <!-- <th>Admin</th> -->
        </tr>
      </thead>

  <!-- table body -->
      <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td class="collapsing">
            <div class="ui fitted slider checkbox">
              <input type="checkbox"> <label></label>
            </div>
          </td>
          <td>
            <div class="ui dropdown">
              <i class="red circular empty icon"></i>
              <!-- <i class="dropdown icon"></i> -->
              <div class="menu">
                <div class="item"><i class="ui red circular label"></i></div>
                <div class="item"><i class="ui orange circular label"></i></div>
                <div class="item"><i class="ui green circular label"></i></div>
              </div>
            </div>
          </td>
          <td>
            <div class="ui dropdown">
              <a class="text">Status</a>
              <!-- <i class="dropdown icon"></i> -->
              <div class="menu">
                <div class="item">Pending</div>
                <div class="item">In progress</div>
                <div class="item">Completed</div>

              </div>
            </div>
          </td>
          <td>#<%= ticket.id %> - <%= link_to ticket.title, ticket_path(ticket) %></td>
          <td><%= ticket.body %></td>
          <td><%= ticket.user.email %></td>
          <td><%= standard_date_format(ticket.created_at) %></td>
          <td><%= standard_date_format(ticket.updated_at) %></td>
          <!-- <td>No</td> -->
        </tr>
  <% end %>

          <!-- <td><i class="unhide icon"></i></td> -->
        <!-- </tr> -->
      </tbody>

      <tfoot class="full-width">
        <tr>
          <th></th>

          <th colspan="4">
            <div class="field">
              <select class="ui fluid dropdown">
                <option value="">Status</option>
                <option value="">Pending</option>
                <option value="">In Progress</option>
                <option value="">Complete</option>
              </select>
            </div>
          </th>

          <th colspan="7">
            <div class="ui small primary button">
              Save
            </div>
            <div class="ui small  disabled button">
              Close
            </div>
          </th>


        </tr>
      </tfoot>
  </table>
  </div>
</div>
