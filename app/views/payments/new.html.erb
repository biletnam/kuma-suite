
<h1>make a payment</h1>

<!-- form is for stripe token submit we got from stripe js api to our payments create -->
<%= form_tag invoice_payments_path(@invoice), id: 'server-form' do %>
  <%= hidden_field_tag :stripe_token %>
<% end %>

<!-- for below is to send cc info to stripe server using strupe js api n order to aquire stripe token  -->
<div class="col-md-offset-3 col-md-6">
  <div id="stripe-error" class=""></div>
  <div class="well">
  <%= form_tag '', id: 'cc-form' do  %>
    <div class="form-group">
      <%= label_tag :card_number %>
      <%= text_field_tag :card_number, '', class:'form-control' %>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3">
          <%= select_month Date.today, { add_month_numbers: true }, {class: 'form-control' } %>
        </div>
        <div class="col-sm-3">
          <%= select_year Date.today, { start_year: Date.today.year, end_year: Date.today.year + 10 }, {class: 'form-control' } %>
        </div>
        <div class="col-sm-3">
          <%= text_field_tag :cvc, '', class:'form-control', placeholder:'CVC' %>
        </div>
        <div class="col-sm-3">
          <%= submit_tag 'Pay Now', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

  <% end  %>

  </div>
</div>
