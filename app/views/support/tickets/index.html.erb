<div class="pusher">
  <div class="ui container">
    <h1 class=''>Ticketing Page for <%= current_user.first_name %></h1>

    <div class="ui grid">
      <div class="ten wide column">
        <div class="ui segment">

          <div class="float-right">
            <p>Created: <%= standard_date_format(@tickets.last.created_at) %></p>
            <p>Department: <%= @tickets.last.department.name %></p>
          </div>
            <h2>Your current ticket:</h2>
          <hr>

          <div class="float-left" style="margin:10px;">
            <%= image_tag("/avatars/#{@ticket.user.profile_pic}")  %>
          </div>
          <button class="ui float-right basic icon button">
            <i class="x icon"></i>
          </button>


          <h3 class=''>Subject:
            <%= link_to "#{@tickets.last.title}", support_ticket_path(@tickets.last) %>
          </h3>
          <p><%= @tickets.last.body %></p>
          <br><br>
        </div>
      <div class="ui segment">
        <div class="ui teal labeled icon button float-right" id="modalpop">
          Submit a new Ticket
          <i class="add icon"></i>
        </div>

        <h2 class="">Your ticket history</h2>
        <hr>
          <div class="ui vertical segment">

          <% if current_user.tickets.present? %>
            <% @tickets.each do |t| %>
            <button class="ui float-right basic icon button">
              <i class="x icon"></i>
            </button>
            <p><%= link_to t.title, support_ticket_path(t) %></p>
            <p>Submitted: <%= t.created_at %></p>
            <hr>
            <% end %>
          <% else %>
            <p>You have no tickets!</p>
          <% end %>

          </div>
      </div>

      <br>

    </div>

  <!-- side column  -->
    <div class="six wide column">
      <div class="ui segment">

        <h4>Your Profile Info</h4>
        <hr>

        <p>Client name: <span class='float-right'>
          <strong><%= current_user.full_name %></span>
          </strong>
        </p>
        <p>Email: <span class='float-right'>
          <strong>
            <%= current_user.email %></span></p>
          </strong>

        <p>User tickets: <span class='float-right'>
          <strong><%= current_user.tickets.count %></span></p>
             <!-- @ticket user . count or w/e -->
          </strong>
      </div>
    </div>
  </div>


<!-- modal popup -->
    <div id='modaldiv' class="ui modal">
      <i class="close icon"></i>
      <div class="header">
        Submit a Support Ticket
      </div>
      <div class="content">
        <%= render 'form' %>
      </div>
      <div class="content">
        <em>When submitting a ticket, please give a full description of the problem to help us serve you better. Please bear in mind that the average wait time is 1 to 2 business days. For emergency assistance please call 911.</em>
      </div>
    </div>

    <d  iv class="ui modal">
      <i class="close icon"></i>
    </div>
<!--  -->


  </div>
</div>
