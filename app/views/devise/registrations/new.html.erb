<div class="ui container aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <!-- <img src="assets/images/logo.png" class="image"> -->
      <div class="content">
        Sign up for a new account
      </div>
    </h2>

<!-- under views/devse -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"ui large form",) do |f| %>

  <div class="ui stacked segment">

    <div class="field">
      <div class="ui fluid large left icon input">
        <i class="user icon"></i>
        <%= f.text_field :first_name, placeholder: 'First name', autofocus: true %>
      </div>
    </div>
    <div class="field">
      <div class="ui fluid large left icon input">
        <i class="user icon"></i>
        <%= f.text_field :last_name, placeholder: 'Last name', autofocus: true %>
      </div>
    </div>

  <div class="field">
    <div class="ui fluid large left icon input">
      <i class="user icon"></i>
      <%= f.email_field :email, placeholder: 'example@email.com', autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="ui fluid large left icon input">
      <i class="lock icon"></i>
      <%= f.password_field :password, placeholder: 'Password (6 characters min.)', autocomplete: "off" %>
    </div>
  </div>

  <div class="field">
    <div class="ui fluid large left icon input">
      <i class="lock icon"></i>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password)', autocomplete: "off" %>
    </div>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up!", class:"ui fluid large teal submit button" %>
  </div>
<% end %>

<br>

<div class="ui animated fade button" tabindex="0">
  <div class="visible content">Already have an account?</div>
  <div class="hidden content">
    Log in!
  </div>
</div>
