<!-- <div class="ui three column centered grid"> -->

<div class="ui container aligned center aligned grid">
  <div class="column">

  <%= devise_error_messages! %>

    <h2 class="ui teal image header">
      <!-- <img src="assets/images/logo.png" class="image"> -->
      <div class="content">
        Please log in to continue
      </div>
    </h2>

<!-- under views/devse -->

    <%= form_for(resource, as: resource_name, url: new_user_session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui fluid large left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, placeholder: 'example@email.com', autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="ui fluid large left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: 'Password (6 characters min.)', autocomplete: "off" %>
          </div>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Log in!", class:"ui fluid large teal submit button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
